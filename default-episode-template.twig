{# display summary date and duration #}
    <p> <strong>{{episode.subtitle}} </strong> </br>
    </br>
        {{episode.summary}} </br>
    </br>
    
    {% if not is_feed() %}
        <strong> Aufgenommen: </strong> {{episode.recordingDate}} </br>
        <strong> Veröffentlicht: </strong> {{episode.publicationDate}} </br>
        <strong> Dauer: </strong>
        {% if episode.duration.hours >= 1 %} {{episode.duration.hours}} Std.{% endif %}
        {% if episode.duration.minutes >= 1 %} {{episode.duration.minutes +1 }} Min.{% endif %} </p>
    {% endif %}
    
    {% if is_feed() %}
        <strong> Shownotes: </strong> <a href= {{episode.url}} target="_blank">Link</a> </br>
        <strong> Aufgenommen: </strong> {{episode.recordingDate}} </br>
        <strong> Veröffentlicht: </strong> {{episode.publicationDate}} </br>
        <strong> Dauer: </strong>
        {% if episode.duration.hours >= 1 %} {{episode.duration.hours}} Std.{% endif %}
        {% if episode.duration.minutes >= 1 %} {{episode.duration.minutes +1 }} Min.{% endif %} </p>
    {% endif %}

{# Browser only #}
    {% if not is_feed() %}
    
        {# display web player for episode #}
            {{ episode.player }}

        {# display download menu for episode #} {# display subscribe button #}
        <table style="border-width: 0px;">
        <tbody style="border-width: 0px;">
        <tr><td style="border-width: 0px; vertical-align: top; text-align: center;" valign="top" width="200"> {% include "@core/shortcode/downloads-select.twig" %} </td>
        <td style="border-width: 0px; vertical-align: top; text-align: center;" valign="top" width="250"> {{ podcast.subscribeButton({format: 'rectangle', color: '#EE7600', style: 'outline', size: 'big'}) }}
 </td></tr>
        </tbody>
        </table>
        
        {# display contributor list #}    
            <strong> Teilnehmer: </strong>
            [podlove-template template="contribut_home"]
    {% endif %}

{# display contributor list and subscribe button #}
    {% if is_feed() %}
        <strong> Teilnehmer: </strong>
        [podlove-template template="contribut_feat"]
    {% endif %}

{# display title and shownotes #}
    <p> <strong> Shownotes: {{episode.title}} </strong> </p>
        <div> [shownotes] </div>
